<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sdpcryptogram.seclass.gatech.edu.sdpcryptogram">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".CreateCryptogramActivity"
            android:label="@string/title_activity_create_cryptogram" />
        <activity
            android:name=".CryptogramLibraryActivity"
            android:label="@string/title_activity_cryptogram_library" />
        <activity
            android:name=".CryptogramLibraryStatisticActivity"
            android:label="@string/title_activity_cryptogram_library_stat"/>
        <activity
            android:name=".CryptogramStatisticsActivity"
            android:label="@string/title_activity_cryptogram_stat" />
        <activity android:name=".ViewCompletedCryptogramsActivity"
            android:label="@string/title_activity_view_completed_cryptograms" />
        <activity
            android:name=".PlayCryptogramActivity"
            android:label="@string/title_activity_play_cryptogram"
            android:parentActivityName=".CryptogramLibraryActivity"/>
    </application>

</manifest>